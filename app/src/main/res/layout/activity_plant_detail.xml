<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plantImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantDetailActivity">

    <ImageButton
        android:id="@+id/detailHomeButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:contentDescription="home button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlay"
        app:srcCompat="@drawable/_023_03_09_16_39_36" />

    <ImageButton
        android:id="@+id/detailMapButton"
        android:layout_width="58dp"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:contentDescription="map button"
        app:layout_constraintStart_toEndOf="@+id/detailHomeButton"
        app:layout_constraintTop_toTopOf="@+id/detailHomeButton"
        app:srcCompat="@drawable/_023_03_09_16_45_41" />

    <ImageButton
        android:id="@+id/detailCodeButton"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:layout_marginStart="30dp"
        android:contentDescription="code button"
        app:layout_constraintStart_toEndOf="@+id/detailMapButton"
        app:layout_constraintTop_toTopOf="@+id/detailHomeButton"
        app:srcCompat="@drawable/_023_03_09_16_39_53" />

    <ImageButton
        android:id="@+id/detailProfileButton"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:contentDescription="profile button"
        app:layout_constraintStart_toEndOf="@+id/detailCodeButton"
        app:layout_constraintTop_toTopOf="@+id/detailHomeButton"
        app:srcCompat="@drawable/_023_03_09_16_41_17" />

    <TextView
        android:id="@+id/txtPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/radley"
        android:text="Name of Plant"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4C7C5C"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="417dp"
        android:layout_height="126dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green_trail_background_pattern_snip" />

    <SeekBar
        android:id="@+id/audioSeekbar"
        android:layout_width="229dp"
        android:layout_height="26dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:contentDescription="audio button"
        android:drawableLeft="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audioSeekbar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="163dp"
        android:layout_height="164dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlantName"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtScientificName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/radley"
        android:text="Scientific Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/radley"
        android:text="Location on Campus"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/txtScientificName" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="348dp"
        android:layout_height="225dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/radley"
                android:text="More Info:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>