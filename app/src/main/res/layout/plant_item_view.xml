<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/plantImageRecyclerView"
        android:layout_width="91dp"
        android:layout_height="88dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtViewPlantNameRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Plant Name"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/plantImageRecyclerView"
        app:layout_constraintStart_toEndOf="@+id/plantImageRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/plantImageRecyclerView"
        app:layout_constraintVertical_bias="0.35000002" />

    <TextView
        android:id="@+id/txtViewPlantNameScientificRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txtViewPlantNameRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/txtViewPlantNameRecyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>